<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3.Viows.PagePersonas">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Honeydew" >
            <Entry x:Name="txtnombres"
                   Placeholder="Nombres"
                   TextColor="Black"
                   Margin="20,20,20,0"/>

            <Entry x:Name="txtapellidos" Placeholder="Apellidos" Keyboard="Text"
                  TextColor="Black"
                  Margin="20,20,20,0"/>

            <Entry x:Name="txtedad" Placeholder="Edad" Keyboard="Numeric"
                  TextColor="Black"
                  Margin="20,20,20,0"/>

            <Entry x:Name="txtcorreo" Placeholder="Correo Electronico" Keyboard="Text"
                  TextColor="Black"
                  Margin="20,20,20,0"/>

            <Entry x:Name="txtdireccion" Placeholder="Direccion" Keyboard="Text"
                  TextColor="Black"
                  Margin="20,20,20,0"/>

            <Button x:Name="btnsalvar" Text="Salvar" Clicked="bntsalvar_cliked"
                    Margin="30,30,30,0"
                    BackgroundColor="Yellow"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>